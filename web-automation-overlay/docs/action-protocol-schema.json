{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Web Automation Action Protocol",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0.0"
    },
    "session_id": {
      "type": "string",
      "description": "Unique session identifier"
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "target"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "click",
              "type",
              "select",
              "wait",
              "scroll",
              "hover",
              "screenshot"
            ]
          },
          "target": {
            "type": "object",
            "properties": {
              "selector": {
                "type": "string",
                "description": "CSS selector or XPath"
              },
              "text": {
                "type": "string",
                "description": "Fallback text matching"
              },
              "position": {
                "type": "object",
                "properties": {
                  "x": {
                    "type": "number"
                  },
                  "y": {
                    "type": "number"
                  }
                }
              }
            },
            "anyOf": [
              {
                "required": [
                  "selector"
                ]
              },
              {
                "required": [
                  "text"
                ]
              },
              {
                "required": [
                  "position"
                ]
              }
            ]
          },
          "value": {
            "type": "string",
            "description": "Input value for type actions"
          },
          "overlay": {
            "type": "object",
            "properties": {
              "color": {
                "type": "string",
                "enum": [
                  "red",
                  "blue",
                  "green",
                  "yellow",
                  "purple"
                ]
              },
              "label": {
                "type": "string",
                "description": "Tooltip text"
              },
              "duration": {
                "type": "number",
                "description": "Highlight duration in ms"
              }
            }
          },
          "options": {
            "type": "object",
            "properties": {
              "delay": {
                "type": "number",
                "description": "Delay before action in ms"
              },
              "wait_for": {
                "type": "string",
                "description": "Wait condition"
              },
              "retry": {
                "type": "object",
                "properties": {
                  "max_attempts": {
                    "type": "number"
                  },
                  "interval": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "version",
    "session_id",
    "actions"
  ]
}