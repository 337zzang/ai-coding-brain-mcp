{
  "title": "지치한 워크플로우 진행 절차",
  "version": "3.0",
  "phases": {
    "phase_1_design": {
      "name": "상세설계 단계",
      "duration": "요청 복잡도에 따라 2-10분",
      "steps": [
        {
          "step": "1.1 요구사항 분석",
          "description": "사용자 요청을 분석하고 숨겨진 요구사항 도출",
          "deliverables": [
            "요구사항 명세서",
            "제약사항 목록"
          ],
          "validation": "사용자와 요구사항 확인"
        },
        {
          "step": "1.2 시스템 아키텍처 설계",
          "description": "전체 시스템 구조와 컴포넌트 간 관계 설계",
          "deliverables": [
            "아키텍처 다이어그램",
            "컴포넌트 명세"
          ],
          "validation": "기술적 타당성 검토"
        },
        {
          "step": "1.3 작업 분해 구조(WBS) 설계",
          "description": "큰 작업을 실행 가능한 세부 Task와 Todo로 분해",
          "deliverables": [
            "WBS 트리",
            "Task-Todo 매핑"
          ],
          "validation": "작업 단위의 적절성 검토"
        },
        {
          "step": "1.4 리스크 분석 및 대응책",
          "description": "예상 위험 요소와 대응 방안 수립",
          "deliverables": [
            "리스크 매트릭스",
            "대응 계획"
          ],
          "validation": "리스크 심각도 평가"
        },
        {
          "step": "1.5 성공 기준 정의",
          "description": "명확하고 측정 가능한 완료 기준 설정",
          "deliverables": [
            "성공 기준 체크리스트",
            "품질 게이트"
          ],
          "validation": "기준의 명확성 확인"
        }
      ],
      "output": "상세설계서 (Design Document)"
    },
    "phase_2_approval": {
      "name": "사용자 승인 단계",
      "duration": "사용자 응답 시간에 의존",
      "steps": [
        {
          "step": "2.1 설계서 제시",
          "description": "완성된 상세설계서를 사용자에게 명확하게 제시",
          "format": {
            "overview": "프로젝트 개요 및 목표",
            "architecture": "시스템 아키텍처 및 기술 스택",
            "tasks": "작업 목록 및 예상 소요 시간",
            "deliverables": "각 단계별 산출물",
            "timeline": "전체 일정 및 마일스톤",
            "risks": "위험 요소 및 대응책",
            "success_criteria": "성공 기준 및 검증 방법"
          }
        },
        {
          "step": "2.2 질의응답 세션",
          "description": "사용자의 질문에 상세히 답변하고 우려사항 해결",
          "actions": [
            "명확화 질문 수용",
            "대안 제시",
            "수정사항 반영"
          ]
        },
        {
          "step": "2.3 최종 승인 확인",
          "description": "사용자로부터 명시적 승인 획득",
          "required_response": "명확한 승인 의사표시 (예: '승인', 'OK', '진행해주세요')",
          "approval_record": "승인 시간 및 조건 기록"
        }
      ],
      "output": "승인된 실행 계획 (Approved Execution Plan)"
    },
    "phase_3_execution": {
      "name": "워크플로우 실행 단계",
      "duration": "설계서에 명시된 예상 시간",
      "steps": [
        {
          "step": "3.1 실행 환경 준비",
          "description": "필요한 도구, 라이브러리, 환경 설정",
          "validations": [
            "의존성 확인",
            "권한 검증",
            "백업 생성"
          ]
        },
        {
          "step": "3.2 순차적 Task 실행",
          "description": "승인된 계획에 따라 Task를 순서대로 실행",
          "monitoring": [
            "실시간 진행률 추적",
            "오류 모니터링",
            "품질 게이트 검증"
          ]
        },
        {
          "step": "3.3 중간 검증점",
          "description": "각 Task 완료 시 중간 결과 검증",
          "criteria": [
            "기능 요구사항 충족",
            "품질 기준 달성",
            "성능 요구사항 만족"
          ]
        },
        {
          "step": "3.4 오류 처리 및 복구",
          "description": "예상치 못한 문제 발생 시 자동 처리",
          "procedures": [
            "오류 로깅",
            "자동 롤백",
            "대안 실행",
            "사용자 알림"
          ]
        }
      ],
      "output": "실행 결과물 및 로그"
    },
    "phase_4_reporting": {
      "name": "결과 보고 단계",
      "duration": "1-3분",
      "steps": [
        {
          "step": "4.1 실행 결과 종합",
          "description": "모든 실행 결과를 종합하여 분석",
          "analysis": [
            "완료된 작업 목록",
            "생성된 산출물",
            "성능 메트릭",
            "품질 지표",
            "발생한 이슈 및 해결책"
          ]
        },
        {
          "step": "4.2 성공 기준 검증",
          "description": "사전 정의된 성공 기준 달성 여부 확인",
          "verification": [
            "기능 테스트",
            "성능 테스트",
            "사용자 요구사항 재확인"
          ]
        },
        {
          "step": "4.3 상세 결과 보고서 작성",
          "description": "완전하고 투명한 결과 보고서 제공",
          "report_sections": {
            "executive_summary": "핵심 결과 요약",
            "detailed_results": "세부 실행 결과",
            "deliverables": "생성된 모든 산출물",
            "performance_metrics": "성능 및 품질 지표",
            "issues_resolved": "해결된 문제점",
            "lessons_learned": "학습된 교훈",
            "recommendations": "향후 개선 권고사항"
          }
        },
        {
          "step": "4.4 사후 지원 계획",
          "description": "결과물에 대한 지속적 지원 방안 제시",
          "support_areas": [
            "버그 수정",
            "기능 개선",
            "사용법 안내",
            "확장 계획"
          ]
        }
      ],
      "output": "완전한 프로젝트 결과 보고서"
    }
  },
  "checkpoints": [
    {
      "checkpoint": "설계 완료 검증",
      "criteria": [
        "모든 요구사항 반영",
        "기술적 타당성 확인",
        "리스크 대응책 수립"
      ],
      "gate": "Phase 1 → Phase 2"
    },
    {
      "checkpoint": "승인 완료 확인",
      "criteria": [
        "명시적 사용자 승인",
        "실행 계획 최종화",
        "리소스 준비 완료"
      ],
      "gate": "Phase 2 → Phase 3"
    },
    {
      "checkpoint": "실행 완료 검증",
      "criteria": [
        "모든 Task 완료",
        "성공 기준 달성",
        "품질 검증 통과"
      ],
      "gate": "Phase 3 → Phase 4"
    }
  ],
  "quality_assurance": {
    "design_review": "상세설계의 완전성 및 실현 가능성 검토",
    "progress_monitoring": "실시간 진행 상황 추적 및 편차 관리",
    "result_validation": "최종 결과물의 요구사항 충족도 검증",
    "continuous_improvement": "절차 개선을 위한 피드백 수집"
  }
}