{
  "manifest_version": 3,
  "name": "AI Web Automation Overlay",
  "version": "1.0.0",
  "description": "Visual overlay system for AI-driven web automation",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/dom-analyzer.js",
        "content/action-parser.js",
        "content/overlay.js"
      ],
      "css": [
        "styles/overlay.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/overlay.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}