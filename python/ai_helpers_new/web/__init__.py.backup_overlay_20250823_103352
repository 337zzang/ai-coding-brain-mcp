def web_wait_for_element(
    selector: str,
    session_id: Optional[str] = None,
    timeout: Optional[int] = 10000
) -> Dict[str, Any]:
    """요소 대기 - 기존 API 호환"""
    result = _web.wait(selector, session_id, timeout)
    return result.to_dict() if hasattr(result, 'to_dict') else result



