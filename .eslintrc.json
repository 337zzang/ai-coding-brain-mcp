{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn", 
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    "**/*.ts",
    "**/*.tsx", 
    "dist/**/*",
    "node_modules/**/*",
    "**/*.backup",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}